BoxLayout:
    orientation: 'vertical'

    Label:
        id: mcp_label
        text: 'Values of MCP3008'

    Label:
        id: mcp
        text: 'Coca Cola 2016'

    BoxLayout:
        orientation: 'horizontal'

        Label:
            text: 'direction of rotation'

        Label:
            id: vr_rotation
            text: 'cw or ccw'

    BoxLayout:
        orientation: 'horizontal'

        Label:
            id: switch_status_text
            text: 'Buttons for switch'

        Button:
            id: switch
            text: 'switch'
            on_press: app.switch_on()


    BoxLayout:
        orientation: 'horizontal'

        Label:
            id: L1
            text: 'L1: off'

        Label:
            id: L2
            text: 'L2: off'

        Label:
            id:L3
            text: 'L3: off'

        Label:
            id: L4
            text: 'L4: off'

        Label:
            id: L5
            text: 'L5: off'

        Label:
            id: L6
            text: 'L6: off'


    BoxLayout:
        orientation: 'horizontal'

        Label:
            id: HL1
            text: 'HL1: off'

        Button:
            id: H1
            text: 'H1 switch'
            on_press: app.hl1_toggle()

        Label:
            id: HL2
            text: 'HL2: off'

        Button:
            id: H2
            text: 'H2 switch'
            on_press: app.hl2_toggle()

        Label:
            id: HL3
            text: 'HL3: off'

        Button:
            id: H3
            text: 'H3 switch'

        Label:
            id: HL4
            text: 'HL4: off'

        Button:
            id: H4
            text: 'H4 switch'

        Label:
            id: HL5
            text: 'HL5: off'

        Button:
            id: H5
            text: 'H5 switch'


    BoxLayout:
        orientation: 'horizontal'


        Label:
            text: 'Button for Reset'

        Button:
            id: reset
            text: 'Reset Button'
            on_press: app.reset_on()

